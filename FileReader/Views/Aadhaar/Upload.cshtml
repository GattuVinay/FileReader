@{
    ViewBag.Title = "Upload Aadhaar";
}

<div class="align-bottom">
<h2>Upload Aadhaar Card</h2>

<!-- Selection for Single or Multiple Image Upload -->
<div>
    <label>
        <input type="checkbox" id="singleImage" name="imageType" value="single" />
        One Side (or)  Full File
    </label> <span>  </span>
    <label>
        <input type="checkbox" id="twoImages" name="imageType" value="two" />
        Other Side
    </label>
</div>

</div>
<!-- Form for File Upload -->
@using (Html.BeginForm("Upload", "Aadhaar", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="align-content-center">
    <div id="fileInputContainer">
        <!-- Single Image Input -->
        <div id="singleFileInput">
            <input class="btn-warning" type="file" name="file" /><span></span>
        </div>

        <!-- Multiple Image Inputs (hidden by default) -->
        <div id="twoFileInputs" style="display:none;">
            <input class="btn-warning" type="file" name="file1" /><span></span>
            <input class="btn-warning" type="file" name="file2" /><span></span>
        </div>
    </div>
    <div>
        <input class="btn-success" type="submit" value="Upload" />
    </div>
    </div>
}

<link href="~/css/stylesheet.css" rel="stylesheet" />
<script src="~/js/javascript.js"></script>